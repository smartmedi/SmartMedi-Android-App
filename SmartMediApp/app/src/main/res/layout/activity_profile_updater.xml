    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#304158"
        android:padding="30dp"
        android:id="@+id/profile_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_height="170dp"
            android:layout_width="170dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/profile_img_circle"/>
        <TextView
            android:id="@+id/image_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_camera"
            android:textColor="@color/cameraColor"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="80dp"
            />

    </RelativeLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/skypeColor"
        fab:fab_colorPressed="@color/skypeColor"
        fab:fab_size="normal"
        android:layout_marginTop="-32dp"
        android:layout_below="@id/profile_image"
        android:layout_alignParentEnd="true"
        />

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@id/profile_image"
    android:padding="25dp"
    android:id="@+id/linearLayout2">

 <LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="match_parent"
     android:orientation="horizontal">

   <!--  <TextView
         android:layout_width="0dp"
         android:id="@+id/userIcon"
         android:layout_weight="0.15"
         android:textSize="25sp"
         android:layout_marginTop="10dp"
         android:layout_height="wrap_content"
         android:text="@string/icon_user" />-->


     <smartmedi.org.smartmediapp.CustomFontAwesomeTextView
         android:layout_width="0dp"
         android:layout_weight="0.15"
         android:textSize="25sp"
         style="@style/fontAwesome"
         android:layout_marginTop="10dp"
         android:layout_height="wrap_content"
         android:text="@string/icon_user"/>


     <EditText
         android:id="@+id/name"
         android:layout_width="0dp"
         android:hint="Name"
         android:textColor="@color/cameraColor"
         android:layout_height="wrap_content"
         android:layout_weight="0.75"
         android:ems="10" />

     </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:id="@+id/calenderIcon"
            android:layout_weight="0.15"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="@string/icon_calender" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="0dp"
            android:hint="DOB"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/maleIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:text="@string/icon_male" />
   <!--     <TextView
            android:layout_width="0dp"
            android:id="@+id/maleText"
            android:layout_weight="0.04"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Male" />-->

        <TextView

            android:id="@+id/femaleIcon"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:text="@string/icon_female" />
     <!--
        <TextView
            android:layout_width="0dp"
            android:id="@+id/femaleText"
            android:layout_weight="0.07"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Female" />-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:id="@+id/jobIcon"
            android:layout_weight="0.15"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="@string/icon_job" />

        <EditText
            android:id="@+id/job"
            android:layout_width="0dp"
            android:hint="Occupation"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:ems="10" />

    </LinearLayout>




    </LinearLayout>


</RelativeLayout>
